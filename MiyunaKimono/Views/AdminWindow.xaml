<Window x:Class="MiyunaKimono.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kimono Admin" Height="800" Width="1280"
        WindowStartupLocation="CenterScreen" Background="#F6F6F6">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- ===== Sidebar (ของเดิม) ===== -->
        <Border Grid.Column="0" Background="White" Padding="20" BorderBrush="#EEE" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Kimono Admin" FontWeight="Bold" FontSize="22" Margin="0,8,0,24"/>

                <StackPanel Grid.Row="1">
                    <Button Style="{StaticResource SideMenuButton}" Click="Dashboard_Click" Height="44">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Assets/ic_dashboard.png" Width="22" Margin="0,0,12,0"/>
                            <TextBlock Text="Dashboard" FontSize="16"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SideMenuButton}" Click="Product_Click" Height="44">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Assets/ic_product.png" Width="22" Margin="0,0,12,0"/>
                            <TextBlock Text="Product" FontSize="16"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SideMenuButton}" Click="Orders_Click" Height="44">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Assets/ic_orders.png" Width="22" Margin="0,0,12,0"/>
                            <TextBlock Text="Orders" FontSize="16"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SideMenuButton}" Click="Report_Click" Height="44">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Assets/ic_report.png" Width="22" Margin="0,0,12,0"/>
                            <TextBlock Text="Report" FontSize="16"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Button Grid.Row="2" Style="{StaticResource SideLogoutButton}" Click="Logout_Click" Height="44" Margin="0,12,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/Assets/ic_logout.png" Width="22" Margin="0,0,12,0"/>
                        <TextBlock Text="Log Out" FontSize="16"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ===== Content ===== -->
        <Grid Grid.Column="1" Margin="24,16,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Style="{StaticResource TopWhiteBar}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Back -->
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition/>
                        <!-- Title -->
                    </Grid.ColumnDefinitions>

                    <!-- Back icon (เฉพาะ Add/Edit) -->
                    <Button Grid.Column="0"
                            Style="{StaticResource IconButtonNoHover}"
                            Visibility="{Binding ShowBackBtn, Converter={StaticResource BoolToVisibility}}"
                            Click="Back_Click"
                            ToolTip="Back to All">
                        <Image Source="pack://application:,,,/Assets/ic_back.png" Width="22" Height="22"/>
                    </Button>

                    <!-- ชื่อหน้า -->
                    <TextBlock Grid.Column="2"
                               Text="{Binding CurrentHeader}"
                               VerticalAlignment="Center"
                               FontSize="18" FontWeight="SemiBold"/>

                    <!-- ปุ่มด้านขวา -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal"
                                HorizontalAlignment="Right" VerticalAlignment="Center">

                        <!-- Add new Product (เฉพาะหน้า All Product) -->
                        <Button Content="Add new Product"
                                Margin="0,0,0,0"
                                Style="{StaticResource BlueRoundedButton}"
                                Visibility="{Binding ShowAddBtn, Converter={StaticResource BoolToVisibility}}"
                                Click="AddProduct_Click"/>

                        <!-- Publish (เฉพาะหน้า Add New Product) -->
                        <Button Content="Publish"
                                Margin="0,0,0,0"
                                Style="{StaticResource BlueRoundedButton}"
                                Visibility="{Binding ShowPublishBtn, Converter={StaticResource BoolToVisibility}}"
                                Click="Publish_Click"/>

                        <!-- ถังขยะ PNG (เฉพาะหน้า Edit) -->
                        <Button Margin="0,0,14,0"
                                Style="{StaticResource IconButtonNoHover}"
                                Visibility="{Binding ShowDeleteBtn, Converter={StaticResource BoolToVisibility}}"
                                Click="Delete_Click"
                                ToolTip="Delete this product">
                            <Image Source="pack://application:,,,/Assets/ic_trash.png" Width="40" Height="40"/>
                        </Button>

                        <!-- Save (เฉพาะหน้า Edit) -->
                        <Button Content="Save"  
                                Style="{StaticResource BlueRoundedButton}"
                                Visibility="{Binding ShowSaveBtn, Converter={StaticResource BoolToVisibility}}"
                                Click="Save_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- เนื้อหา -->
            <Border Grid.Row="1" Style="{StaticResource CardWhite}">
                <ContentControl x:Name="ContentHost"/>
            </Border>
        </Grid>
    </Grid>
</Window>
