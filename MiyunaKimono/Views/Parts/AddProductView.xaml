<UserControl x:Class="MiyunaKimono.Views.Parts.AddProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="650">

    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="420"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Upload images -->
                <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="12" Padding="18">
                    <StackPanel>
                        <TextBlock Text="Upload 3 product image scale 1:1" FontWeight="SemiBold" Margin="4,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding Images}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="8">
                                        <Border CornerRadius="12" Background="#EEE" Width="200" Height="200">
                                            <Image Source="{Binding Path}" Stretch="UniformToFill" ClipToBounds="True"/>
                                        </Border>
                                        <Button Content="✕" Width="24" Height="24"
                                                Style="{StaticResource IconButtonNoHover}"
                                                Background="#77000000" Foreground="White"
                                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,6,6,0"
                                                Command="{Binding DataContext.RemoveImageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Content="Upload product image"
                                Click="UploadImage_Click"
                                Style="{StaticResource BlueRoundedButton}" Height="40" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Visibility -->
                <Border Grid.Row="2" Grid.Column="0" Background="White" CornerRadius="12" Padding="18">
                    <StackPanel>
                        <TextBlock Text="Visibility" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBlock Text="You can change the visibility of this product for customers"
                                   Foreground="#777" FontSize="12"/>
                        <CheckBox Content="Visible" Margin="0,10,0,0"
                                  IsChecked="{Binding Visible}" Style="{StaticResource FlatCheckBox}"/>
                    </StackPanel>
                </Border>

                <!-- Product details -->
                <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Background="White" CornerRadius="12" Padding="18">
                    <Grid>
                        <!-- 0=header, 1=labels name/code, 2=inputs name/code,
                             3=labels status/brand, 4=inputs status/brand,
                             5=labels category/qty, 6=inputs category/qty,
                             7=labels price/discount, 8=inputs price/discount,
                             9=label desc, 10=input desc -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 0: Header -->
                        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
                            <TextBlock Text="Product Details" FontWeight="SemiBold" FontSize="16"/>
                            <TextBlock Text="Key info to describe and display your product"
                                       Foreground="#777" FontSize="12"/>
                        </StackPanel>

                        <!-- 1: labels Name / Code -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource FormLabel}" Text="Product Name"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource FormLabel}" Text="Product Code"/>

                        <!-- 2: inputs Name / Code -->
                        <Border Grid.Row="2" Grid.Column="0" Background="#F2F2F2" CornerRadius="10" Padding="10" Height="44">
                            <TextBox Text="{Binding ProductName}" Style="{StaticResource WatermarkTextBox}" Tag="Product name"/>
                        </Border>
                        <Border Grid.Row="2" Grid.Column="2" Background="#F2F2F2" CornerRadius="10" Padding="10" Height="44">
                            <TextBox Text="{Binding ProductCode}" Style="{StaticResource WatermarkTextBox}" Tag="Product code"/>
                        </Border>

                        <!-- 3: labels Status / Brand -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource FormLabel}" Text="Status"/>
                        <TextBlock Grid.Row="3" Grid.Column="2" Style="{StaticResource FormLabel}" Text="Brand"/>

                        <!-- 4: inputs Status / Brand -->
                        <!-- Status -->
                        <Border Grid.Row="4" Grid.Column="0" Background="#F2F2F2" CornerRadius="10" Padding="10" Height="44">
                            <ComboBox Style="{StaticResource FlatEditableCombo}"
                                ItemsSource="{Binding StatusList}"
                                Text="{Binding Status, Mode=TwoWay}"/>
                        </Border>
                        <!-- Brand -->
                        <Border Grid.Row="4" Grid.Column="2" Background="#F2F2F2" CornerRadius="10" Padding="10" Height="44">
                            <ComboBox Style="{StaticResource FlatEditableCombo}"
                            ItemsSource="{Binding BrandList}"
                            Text="{Binding Brand, Mode=TwoWay}"/>
                        </Border>

                        <!-- 5: labels Category / Quantity -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource FormLabel}" Text="Category"/>
                        <TextBlock Grid.Row="5" Grid.Column="2" Style="{StaticResource FormLabel}" Text="Quantity"/>

                        <!-- 6: inputs Category / Quantity -->
                        <!-- Category -->
                        <Border Grid.Row="6" Grid.Column="0" Background="#F2F2F2" CornerRadius="10" Padding="10" Height="44">
                            <ComboBox Style="{StaticResource FlatEditableCombo}"
                            ItemsSource="{Binding CategoryList}"
                            Text="{Binding Category, Mode=TwoWay}"/>
                        </Border>
                        <Border Grid.Row="6" Grid.Column="2" Background="#F2F2F2" CornerRadius="10" Padding="10" Height="44">
                            <TextBox Text="{Binding QuantityText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource WatermarkTextBox}" Tag="Total item"/>
                        </Border>

                        <!-- 7: labels Price / Discount -->
                        <TextBlock Grid.Row="7" Grid.Column="0" Style="{StaticResource FormLabel}" Text="Price"/>
                        <TextBlock Grid.Row="7" Grid.Column="2" Style="{StaticResource FormLabel}" Text="Discount"/>

                        <!-- 8: inputs Price / Discount (แก้ binding ให้ถูกช่อง) -->
                        <Border Grid.Row="8" Grid.Column="0" Background="#F2F2F2" CornerRadius="10" Padding="10" Height="44">
                            <TextBox Text="{Binding PriceText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource WatermarkTextBox}" Tag="e.g. 45,000 THB"/>
                        </Border>
                        <Grid Grid.Row="8" Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="48"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="#F2F2F2" CornerRadius="10,0,0,10" Padding="10" Height="44">
                                <TextBox Text="{Binding DiscountText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource WatermarkTextBox}" Tag="e.g. 15"/>
                            </Border>
                            <Border Grid.Column="1" Background="#F2F2F2" CornerRadius="0,10,10,0" Height="44" Padding="0">
                                <TextBlock Text="%" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="15" FontWeight="SemiBold"/>
                            </Border>
                        </Grid>

                        <!-- 9: label Description -->
                        <TextBlock Grid.Row="9" Grid.ColumnSpan="3" Style="{StaticResource FormLabel}" Text="Description"/>

                        <!-- 10: input Description -->
                        <Border Grid.Row="10" Grid.ColumnSpan="3" Background="#F2F2F2" CornerRadius="10" Padding="10">
                            <TextBox Text="{Binding Description}" AcceptsReturn="True" MinHeight="120"
                                     BorderThickness="0" TextWrapping="Wrap"
                                     Tag="A white wedding kimono, known as the Shiromuku, ..."
                                     Style="{StaticResource WatermarkTextBox}"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
