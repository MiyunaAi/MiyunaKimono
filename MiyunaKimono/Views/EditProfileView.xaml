<UserControl x:Class="MiyunaKimono.Views.EditProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Background="#FAFAFA">
    <UserControl.Resources>
        <!-- พาเล็ต -->
        <SolidColorBrush x:Key="InputBg" Color="#F6F7F9"/>
        <SolidColorBrush x:Key="InputBorder" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="InputBorderFocus" Color="#E879F9"/>
        <SolidColorBrush x:Key="InputText" Color="#111111"/>
        <SolidColorBrush x:Key="PlaceholderText" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="ErrorTextBrush" Color="#DC2626"/>

        <!-- Label -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,14,0,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Error ใต้ช่อง (ซ่อนเมื่อว่าง/Null) -->
        <Style x:Key="ErrorText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ErrorTextBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="4,6,0,0"/>
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Trigger>
                <Trigger Property="Text" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox + Placeholder (ใช้ Tag) -->
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource InputText}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"/>
                                <TextBlock x:Name="Placeholder"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="{StaticResource PlaceholderText}"
                                           Margin="12,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource InputBorderFocus}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <!-- แสดง placeholder เมื่อไม่มีข้อความและไม่ได้โฟกัส -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsKeyboardFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox ที่อยากปิด IME (อีเมล/เบอร์) -->
        <Style x:Key="InputBoxAscii" BasedOn="{StaticResource InputBox}" TargetType="TextBox">
            <Setter Property="InputMethod.IsInputMethodEnabled" Value="False"/>
        </Style>
    </UserControl.Resources>


    <ScrollViewer VerticalScrollBarVisibility="Auto">
        
        <StackPanel Margin="24">
            
            
            <!-- Top bar -->
            <Border Style="{StaticResource TopWhiteBar}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back -->
                    <Button Style="{StaticResource IconButtonNoHover}"
                            Width="40" Height="40" Click="Back_Click">
                        <Viewbox Width="18" Height="18">
                            <Path Data="M 22,8 L 8,22 L 22,36"
                                  Stroke="#333" StrokeThickness="3"
                                  StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                        </Viewbox>
                    </Button>

                    <!-- Title -->
                    <TextBlock Grid.Column="1" VerticalAlignment="Center"
                               Text="User information" FontSize="18" FontWeight="SemiBold"/>

                    <!-- SAVE -->
                    <Button Grid.Column="2" Content="SAVE" Height="32" MinWidth="100"
                            Style="{StaticResource PrimaryButton}"
                            IsEnabled="{Binding CanSave}"
                            Click="Save_Click"/>
                </Grid>
            </Border>

            <!-- Avatar + edit -->
            <StackPanel Margin="0,28" HorizontalAlignment="Center">
                <Grid>
                    <Border Width="160" Height="160" CornerRadius="80" Background="#EEF2FF">
                        <Image Source="{Binding AvatarPreview}" Stretch="UniformToFill" />
                    </Border>

                    <!-- ปุ่มดินสอ -->
                    <Button Width="36" Height="36" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Margin="0,0,8,8"
                            Click="ChangeAvatar_Click"
                            ToolTip="Change avatar"
                            Style="{StaticResource IconGhostButton}">
                        <Image Source="pack://application:,,,/Assets/ic_edit.png" Width="20" Height="20"/>
                    </Button>
                </Grid>
            </StackPanel>

            <!-- Form 2 คอลัมน์ -->
            <!-- Form 2 คอลัมน์ -->
            <!-- Form 2 คอลัมน์ (แก้ไม่ให้ซ้อน) -->
            <Grid Margin="0,8,0,40">
                <!-- 2 คอลัมน์สำหรับ ซ้าย/ขวา -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- 🔧 เพิ่ม 2 แถว: แถวบน (Name/Lastname), แถวล่าง (Email/Phone) -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0: Name -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Name"/>
                    <TextBox Style="{StaticResource InputBox}"
                 Tag="Enter first name"
                 Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Row 0: Lastname -->
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Lastname"/>
                    <TextBox Style="{StaticResource InputBox}"
                 Tag="Enter last name"
                 Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Row 1: Email -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,0,0">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Email"/>
                    <TextBox Style="{StaticResource InputBoxAscii}"
                 Tag="name@example.com"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Style="{StaticResource ErrorText}"
                   Text="{Binding EmailError}"/>
                </StackPanel>

                <!-- Row 1: Phone -->
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,8,0,0">
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Phone Number"/>
                    <TextBox Style="{StaticResource InputBoxAscii}"
                 Tag="08xxxxxxxx"
                 Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Style="{StaticResource ErrorText}"
                   Text="{Binding PhoneError}"/>
                </StackPanel>
            </Grid>


        </StackPanel>
    </ScrollViewer>
</UserControl>
