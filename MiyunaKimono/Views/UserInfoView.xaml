<UserControl x:Class="MiyunaKimono.Views.UserInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FAFAFA">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">

            <!-- ===== แถบบาร์ขาวบนสุด ===== -->
            <Border Style="{StaticResource TopWhiteBar}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back -->
                    <Button Style="{StaticResource IconButtonNoHover}" Width="40" Height="40"
                            Click="Back_Click" ToolTip="Back">
                        <Viewbox Width="18" Height="18">
                            <Path Data="M 22,8 L 8,22 L 22,36"
                                  Stroke="#333" StrokeThickness="3"
                                  StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                        </Viewbox>
                    </Button>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               Text="User information"
                               FontSize="18" FontWeight="SemiBold"/>

                    <!-- Edit Profile (ยังไม่ทำงาน) -->
                    <Button Grid.Column="2" Content="Edit Profile"
                            Height="32" MinWidth="120"
                            Style="{StaticResource PrimaryButton}"
                            Click="EditProfile_Click"
                            
                            
                            />
                </Grid>
            </Border>

            <!-- ===== บัตรโปรไฟล์ผู้ใช้ ===== -->
            <Border Style="{StaticResource CardWhite}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="84"/>
                        <ColumnDefinition Width="14"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar วงกลม -->
                    <!-- ตัวอย่างส่วนรูปผู้ใช้ -->
                    <Image Source="{Binding AvatarImg}" Width="56" Height="56" Stretch="UniformToFill">
                        <Image.Clip>
                            <EllipseGeometry Center="28,28" RadiusX="28" RadiusY="28"/>
                        </Image.Clip>
                    </Image>

                    <!-- ชื่อ, แฮชแท็ก, อีเมล -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="{Binding FullName,  Mode=OneWay, TargetNullValue=—}"
                                   FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock>
                            <Run Text="#"/><Run Text="{Binding Username, Mode=OneWay, TargetNullValue=—}"/>
                        </TextBlock>
                        <TextBlock Text="{Binding Email, Mode=OneWay, TargetNullValue=—}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== ส่วนหัว My Order + ตัวกรอง ===== -->
            <Grid Margin="0,6,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="My Order" FontSize="16" FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <!-- เดือน -->
                <ComboBox Grid.Column="1" Width="140" Height="32"
                          ItemsSource="{Binding MonthOptions}"
                          SelectedItem="{Binding SelectedMonth, Mode=TwoWay}"
                          SelectedIndex="0"/>

                <!-- ปี -->
                <ComboBox Grid.Column="3" Width="120" Height="32"
                          ItemsSource="{Binding YearOptions}"
                          SelectedItem="{Binding SelectedYear, Mode=TwoWay}"
                          SelectedIndex="0"/>
            </Grid>

            <!-- ===== ตารางออเดอร์ ===== -->
            <Border Style="{StaticResource CardWhite}">
                <DockPanel LastChildFill="True">

                    <!-- หัวตาราง -->
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="140"/>
                            <!-- Details -->
                            <ColumnDefinition Width="32"/>
                            <!-- ✅ spacer เพิ่มเข้ามา -->
                            <ColumnDefinition Width="200"/>
                            <!-- Date -->
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Order id"  FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Amount"   FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="Status"   FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" Text="Details"  FontWeight="SemiBold"/>
                        
                        <TextBlock Grid.Column="5" Text="Date"     FontWeight="SemiBold"/>
                    </Grid>

                    <!-- แถวข้อมูล -->
                    <ListBox ItemsSource="{Binding FilteredOrders}"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="0,14">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="140"/>
                                            <!-- Details -->
                                            <ColumnDefinition Width="32"/>
                                            <!-- ✅ spacer เพิ่มเข้ามา -->
                                            <ColumnDefinition Width="200"/>
                                            <!-- Date -->
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding DisplayId}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding AmountText}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Status}"/>
                                        <Button   Grid.Column="3" Content="Here!"
                                                  Height="30" MinWidth="80"
                                                  Style="{StaticResource PrimaryButton}"
                                                  Tag="{Binding}" Click="OpenDetails_Click"/>
                                        <TextBlock Grid.Column="5" Text="{Binding DateText}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
