<Window x:Class="MiyunaKimono.Views.ProductListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Miyuna Kimono" Height="900" Width="1440"
        WindowStartupLocation="CenterScreen" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <!-- ยกแถบบน + Nav จาก UserMainWindow มาเหมือนเดิม -->
            <RowDefinition Height="Auto"/>
            <!-- Top bar -->
            <RowDefinition Height="Auto"/>
            <!-- Nav bar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- ===== 1) TOP BAR (คัดลอกจาก UserMainWindow ให้เหมือนทุกอย่าง) ===== -->
        <!-- ใช้สไตล์/ทรัพยากรจาก App.xaml ได้เลย -->
        <Border Grid.Row="0" Background="White" Padding="16,10" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <!-- (วางโค้ด Top bar ของคุณที่ใช้ใน UserMainWindow ตรงนี้แบบเดิม) -->
            <TextBlock Text="Miyuna  Kimono" FontWeight="SemiBold" FontSize="18"/>
        </Border>

        <!-- ===== 2) NAV BAR (คัดลอกจาก UserMainWindow ให้เหมือนเดิม) ===== -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4">

                    <!-- Home -->
                    <Button Style="{StaticResource NavTextButton}" Click="Home_Click">
                        <TextBlock TextAlignment="Center"><Run Text="Home"/></TextBlock>
                    </Button>

                    <!-- ALL Kimono -->
                    <Button Style="{StaticResource NavTextButton}" Click="AllKimono_Click">
                        <TextBlock TextAlignment="Center"><Run Text="ALL"/><LineBreak/><Run Text="Kimono"/></TextBlock>
                    </Button>

                    <!-- Furisode Kimono -->
                    <Button Style="{StaticResource NavTextButton}" Click="Furisode_Click">
                        <TextBlock TextAlignment="Center"><Run Text="Furisode"/><LineBreak/><Run Text="Kimono"/></TextBlock>
                    </Button>

                    <!-- (ปุ่มหมวดอื่น ๆ วางเหมือนหน้าเดิม) -->
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ===== 3) CONTENT: หัวข้อ + กริดการ์ดสินค้า ===== -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24,16,24,24">

                <!-- หัวข้อ -->
                <TextBlock FontSize="22" FontWeight="SemiBold">
                    <Run Text="{Binding PageTitle, Mode=OneWay}"/>
                    <Run Text="  ( "/>
                    <Run Text="{Binding AllProductsCount, Mode=OneWay}"/>
                    <Run Text=" Products Available )"/>
                </TextBlock>

                <!-- กริดการ์ด: 6 ต่อแถวเหมือนหน้า Home -->
                <ItemsControl ItemsSource="{Binding AllProducts}" Margin="0,16,0,0"
                              HorizontalContentAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="12"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- ใช้สไตล์เดียวกับการ์ดใน UserMainWindow -->
                            <Border Width="{StaticResource TopCardWidth}"
                                    Padding="12"
                                    Background="#FAFAFA"
                                    BorderBrush="#E9E9EC" BorderThickness="1"
                                    CornerRadius="14">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- รูป 1:1 -->
                                    <Grid>
                                        <Border Background="#EEE" CornerRadius="10">
                                            <Border>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Height"
                                                                Value="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"/>
                                                    </Style>
                                                </Border.Style>
                                                <Image Stretch="UniformToFill"
                                                       Source="{Binding Image1Path}"/>
                                            </Border>
                                        </Border>
                                    </Grid>

                                    <!-- รายละเอียด -->
                                    <StackPanel Grid.Row="1" Margin="0,10,0,8">
                                        <TextBlock Text="{Binding ProductName}" FontWeight="SemiBold"/>
                                        <TextBlock Foreground="#666" Margin="0,2,0,0">
                                            <Run Text="#"/>
                                            <Run Text="{Binding Category, TargetNullValue=—}"/>
                                            <Run Text=" "/><Run Text="Kimono"/>
                                        </TextBlock>

                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock Text="Price " FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Price, StringFormat={}{0:N0} THB}"/>
                                            <TextBlock Text="{Binding OffText}" Foreground="#888" FontSize="12" Margin="8,0,0,0"/>
                                            <TextBlock Text="  " />
                                            <TextBlock Text="Qty " />
                                            <TextBlock Text="{Binding Quantity}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- ปุ่ม -->
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="42"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Content="VIEW DETAILS"
                                                Height="34"
                                                Style="{StaticResource PinkOutlineButton}"
                                                Click="ViewDetails_Click"
                                                Tag="{Binding}"/>

                                        <!-- ⬇️ ตำแหน่งที่ต้องแก้ -->
                                        <ToggleButton Grid.Column="1" Width="36" Height="34"
                  Background="White"
                  BorderBrush="#E9E9EC" BorderThickness="1"
                  IsChecked="{Binding IsFavorite, Mode=TwoWay}"
                  Checked="Heart_Checked"
                  Unchecked="Heart_Unchecked"
                  FocusVisualStyle="{x:Null}">
                                            <ToggleButton.Template>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8" Padding="6">
                                                        <Image x:Name="img" Source="pack://application:,,,/Assets/ic_heart_line.png"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="img" Property="Source"
                                Value="pack://application:,,,/Assets/ic_heart_fill.png"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </ToggleButton.Template>
                                        </ToggleButton>

                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
